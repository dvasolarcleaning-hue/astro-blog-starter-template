---
export interface LayoutProps {
  title?: string;
}
const { title } = Astro.props as LayoutProps;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | DVA Solar Cleaning` : 'DVA Solar Cleaning'}</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
      body {
        font-family: 'Poppins', Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
        color: #333;
      }
      a {
        color: #0077cc;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      header, footer {
        background-color: #0077cc;
        color: white;
        padding: 20px;
        text-align: center;
      }
      nav {
        background: #005599;
        padding: 15px;
        text-align: center;
      }
      nav a {
        margin: 0 15px;
        color: white;
        font-weight: bold;
      }
      main {
        max-width: 1000px;
        margin: 20px auto;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }
    </style>
  </head>
  <body>
    <header>
      <img src="/logo.png" alt="DVA Solar Cleaning Logo" style="max-width: 120px; margin-bottom: 10px;" />
      <h1>DVA Solar Cleaning</h1>
      <p style="font-style:italic;">Let Your Solar Breathe</p>
    </header>

    <!-- Navigation Bar -->
    <nav>
      <a href="#about">About</a>
      <a href="#importance">Why Clean</a>
      <a href="#pricing">Pricing</a>
      <a href="#contact">Contact</a>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <p>Â© 2025 DVA Solar Cleaning. All rights reserved.</p>
    </footer>
  </body>
</html>
