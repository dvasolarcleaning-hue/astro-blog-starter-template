---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <!-- Banner -->
  <section style="text-align:center; padding:60px; background:url('/contact-banner.jpg') center/cover; color:white;">
    <h2>Get in Touch</h2>
    <p>Weâ€™re here to help you maximize your solar investment.</p>
  </section>

  <!-- Contact Blocks -->
  <section style="display:flex; gap:20px; flex-wrap:wrap; padding:40px;">
    <!-- Contact Info Block -->
    <div style="flex:1; min-width:250px; background:#e6f2ff; padding:20px; border-radius:10px; text-align:center;">
      <h3>Contact Information</h3>
      <p>
        <img src="/phone-icon.png" alt="Phone" width="30" style="vertical-align:middle; margin-right:8px;" />
        <a href="tel:03705439773">03705439773</a>
      </p>
      <p>
        <img src="/email-icon.png" alt="Email" width="30" style="vertical-align:middle; margin-right:8px;" />
        <a href="mailto:dvasolarcleaning@gmail.com">dvasolarcleaning@gmail.com</a>
      </p>
      <p>
        <img src="/website-icon.png" alt="Website" width="30" style="vertical-align:middle; margin-right:8px;" />
        <a href="https://dvasolarcleaning.com">dvasolarcleaning.com</a>
      </p>
    </div>

    <!-- Contact Form Block -->
    <div style="flex:1; min-width:250px; background:#f0f8ff; padding:20px; border-radius:10px;">
      <h3>Send Us a Message</h3>
      <form onsubmit="window.open(`https://wa.me/923705439773?text=Name:%20${this.name.value}%0AEmail:%20${this.email.value}%0AMessage:%20${this.message.value}`); return false;">
        <label>Name:<br><input type="text" name="name" style="width:100%; padding:8px;" required/></label><br><br>
        <label>Email:<br><input type="email" name="email" style="width:100%; padding:8px;" required/></label><br><br>
        <label>Message:<br><textarea name="message" style="width:100%; padding:8px;" rows="5" required></textarea></label><br><br>
        <button type="submit" style="padding:10px 20px; background:#0077cc; color:white; border:none; border-radius:5px;">Send via WhatsApp</button>
      </form>
    </div>
  </section>

  <!-- Social Icons -->
  <section style="text-align:center; padding:20px;">
    <a href="https://facebook.com" style="margin:0 10px;"><img src="/facebook-icon.png" alt="Facebook" width="40"/></a>
    <a href="https://instagram.com" style="margin:0 10px;"><img src="/instagram-icon.png" alt="Instagram" width="40"/></a>
    <a href="https://wa.me/923705439773" style="margin:0 10px;"><img src="/whatsapp-icon.png" alt="WhatsApp" width="40"/></a>
  </section>
</Layout>
